{
  "expo": {
    "name": "WithLove",
    "slug": "WithLove",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/withlovelogo.png",
    "scheme": "withlove",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#DFF6E3"
    },
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.withloveapp.WithLove",
      "associatedDomains": ["applinks:withlove.expo.app"],
      "infoPlist": {
        "LSApplicationQueriesSchemes": [
          "fb",
          "instagram",
          "twitter"
        ],
        "ITSAppUsesNonExemptEncryption": false
      } 
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/withlovelogo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/withlovelogo.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "WithLove accesses your photos to let you share your moments"
        }
      ],
      [
        "react-native-share",
        {
          "ios": [
            "fb",
            "instagram",
            "twitter"
          ],
          "android": [
            "com.facebook.katana",
            "com.instagram.android",
            "com.twitter.android"
          ]
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "ba8bb9d2-d5df-4b7b-a87b-f885fc17f9a4"
      }
    }
  }
}
